{
    "manifest_version": 2,
    "name": "Subtitle Translator",
    "version": "1.0",
    "description": "Translate subtitles of Netflix videos",
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["https://www.netflix.com/*"],
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ]    
  }
  